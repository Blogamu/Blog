/** The li background */
.wp-cpl-widget li {   
}

/** The thumbnail */
.wp-cpl-widget li span.wp-thumb-overlay {
    background: #FFF !important;   
}
/** The even and odd */
.wp-cpl-widget li.wp-cpl-even {
    background: #FFF !important;
}
.wp-cpl-widget li.wp-cpl-odd {
    background: #FFF !important;
}
/** The sticky post */
.wp-cpl-widget li.wp-cpl-sticky {
    background: #FFF !important;
}